#flexbox-example
    display flex
    justify-content center
    padding 10px
    background-color $color-scripted
    transition all 0.25s ease-in
    
    .box
        padding 20px 30px
        color white        
        &.box1
            background-color green
        &.box2
            background-color orange
        &.box3
            background-color red
        &.box4
            background-color blue
            

#flexbox-example-live
    ul
        list-style none
        display flex
        justify-content space-around
        flex-wrap wrap
        
        li
            margin 5px 10px
            padding 5px 10px
            cursor pointer
            
            background-color rgb(240,240,240)
            &:hover
                background-color rgb(220,220,220)

#flexbox-column-example
    display flex
    border 2px solid rgb(150,150,150)
    
    .left
        width 30%
        background-color rgb(240,240,240)
        padding 100px 10px
        
    .right
        width 70%
        background-color rgb(220,220,220)
        padding 100px 10px